{
  "name": "marko-website-template",
  "private": true,
  "version": "0.1.0",
  "description": "Static website template prepared for Cursor development",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint:js": "eslint \"HTML_TEMPLATE/js/**/*.js\"",
    "lint:css": "stylelint \"HTML_TEMPLATE/css/**/*.css\"",
    "lint:html": "htmlhint \"HTML_TEMPLATE/**/*.html\" --ignore HTML_TEMPLATE/vendor/**/*.html",
    "lint": "npm-run-all -c lint:*",
    "format": "prettier --write .",
    "prepare": "husky install",
    "check:links": "node scripts/check-links.mjs",
    "dev:php": "php -S 127.0.0.1:8000 -t HTML_TEMPLATE",
    "check:seo": "node scripts/check-seo.mjs",
    "check:a11y": "node scripts/check-a11y.mjs",
    "check:theme": "node scripts/check-theme-assets.mjs",
    "check:all": "npm-run-all -c check:*"
  },
  "devDependencies": {
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "htmlhint": "^1.2.3",
    "husky": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "stylelint": "^16.8.1",
    "stylelint-config-standard": "^36.0.0",
    "vite": "^5.4.0",
    "lint-staged": "^15.2.9"
  },
  "lint-staged": {
    "*.{js,css,html}": "prettier --write"
  }
}
